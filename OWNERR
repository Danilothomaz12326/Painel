<script>
// KEY SYSTEM
document.getElementById("keyBtn").addEventListener("click", function(){
    let key = document.getElementById("keyInput").value;
    if(key === "Dnz"){
        document.getElementById("keyBox").style.display = "none";
        document.getElementById("painelOwner").style.display = "block";
        document.getElementById("keyError").style.display = "none";

        // mostrar "Bem-vindo Owner!" 3s
        let welcome = document.getElementById("welcomeText");
        welcome.style.opacity = "1";
        setTimeout(()=>{ welcome.style.opacity = "0"; },3000);

    }else{
        document.getElementById("keyError").style.display = "block";
    }
});

// ABAS
function openTab(tabId){
    document.querySelectorAll('.tab-content').forEach(x=>x.classList.remove('active'));
    document.getElementById(tabId).classList.add('active');
    document.querySelectorAll('.tab').forEach(t=>t.classList.remove('active'));
    document.querySelector(`[onclick="openTab('${tabId}')"]`).classList.add('active');
}

// FUNÇÃO DE CARREGAMENTO
function loadButton(statusId, finalText){
    let status = document.getElementById(statusId);
    status.style.display="inline";
    status.style.opacity="1";
    status.innerText = "1%";
    let i = 1;
    let interval = setInterval(()=>{
        i++;
        status.innerText = i + "%";
        if(i>=100){
            clearInterval(interval);
            status.innerText = finalText;
            setTimeout(()=>{
                status.style.opacity="0";
            },3000);
        }
    },10);
}

// BYPASS
document.getElementById("bypassBtn").addEventListener("click", ()=>{
    loadButton("bypassStatus","All keys Painels Redefined");
});

// CLOSE ALL
document.getElementById("closeBtn").addEventListener("click", ()=>{
    loadButton("closeStatus","All closed");
});

// LOCK PANEL
document.getElementById("lockBtn").addEventListener("click", ()=>{
    loadButton("lockStatus","All Panels locked");
});

// UNLOCK PANEL
document.getElementById("unlockBtn").addEventListener("click", ()=>{
    let status = document.getElementById("unlockStatus");
    status.style.display="inline";
    status.style.opacity="1";
    status.innerText="All Panels unlocked";
    setTimeout(()=>{ status.style.opacity="0"; },3000);
});

// CHECK SYSTEM
document.getElementById("checkBtn").addEventListener("click", ()=>{
    loadButton("checkStatus","System OK");
});

// Painel arrastável
let painel = document.getElementById("painelOwner");
let movendo=false, offsetX, offsetY;
painel.addEventListener("mousedown", e=>{
    movendo=true;
    offsetX=e.clientX - painel.offsetLeft;
    offsetY=e.clientY - painel.offsetTop;
});
document.addEventListener("mousemove", e=>{
    if(movendo){
        painel.style.left = (e.clientX - offsetX) + "px";
        painel.style.top = (e.clientY - offsetY) + "px";
    }
});
document.addEventListener("mouseup", ()=>movendo=false);
</script>

